{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true, //this skips type checking of declaration files (prevents app from crashing when there are type errors in node_modules)
    "allowJs": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "back-end/*": ["./*"],
      "migrations/*": ["../migrations/*"],
      "shared/*": ["../shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "**/*.js"
  ],
}
